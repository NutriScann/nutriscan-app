<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="3dp"
                android:color="@color/orange" /> <!-- Orange border -->
        </shape>
    </item>
    <!-- Padding layer -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Inner transparent background -->
        </shape>
    </item>
</layer-list>
